<div class="me-page">
  <div class="d-flex justify-content-between align-items-center">
    <h3 class="mt-3 text-center">Books List</h4>

    <a href="/add-book">
      <button class="btn btn-primary">
        Add Book
      </button>
    </a>
  </div>
  <table class="table">
    <thead>
      <tr>
        <th scope="col">#</th>
        <th scope="col">Tiêu đề</th> 
        <th scope="col">Tác giả</th> 
        <th scope="col">Thể loại</th> 
        <th scope="col">Ngày phát hành</th>
        <th></th>
      </tr>
    </thead>
    <tbody>
      <% books.forEach((book, index) => { %>  
        <tr>
          <th scope="row"> <%= index + 1 %> </th>
          <td> <%= book.name %> </td> 
          <td> <%= book.author %> </td>
          <td> <%= book.type %> </td> 
          <td> <%= formatDate(book.createdAt) %> </td>
          
          <% if(currentUser) { %>
          <td class="d-flex justify-content-end">
            <a href="<%= book.slug %>" class="d-block mx-1 btn btn-sm btn-outline-primary" role="button">Detail</a>
            <a href="<%= book.slug %>/delete" class="d-block mx-1 btn btn-sm btn-outline-danger" role="button">Delete</a>
          </td>

          <% } %>
        </tr> 
      <% }) %>
      
    </tbody>
  </table>
</div>
